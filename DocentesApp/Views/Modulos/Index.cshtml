 <div class="container-fluid">
      <!-- DataTales Example -->
      <div class="card shadow mb-4">
        <div class="card-header py-3 bg-second-primary">
          <h6 class="m-0 font-weight-bold text-black">Lista de Modulos</h6>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-sm-3">
              <button
                class="btn btn-success"
                data-toggle="modal"
                data-target="#modalData"
              >
                <i class="fas fa-plus-circle"></i> Nuevo Modulo
              </button>
            </div>
          </div>
          <hr />
          <div class="row">
            <div class="col-sm-12">
              <table
                class="table table-bordered"
                id="tbdata"
                cellspacing="0"
                style="width: 100%"
              >
                <thead>
                  <tr>
                     <th>IdModulo</th>
                    <th>Programa</th>
