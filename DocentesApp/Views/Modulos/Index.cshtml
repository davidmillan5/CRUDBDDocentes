                    <td>
                      <button class="btn btn-primary btn-sm">
                        <i class="fas fa-pencil-alt"></i>
                      </button>
                      <button class="btn btn-danger btn-sm">
                        <i class="fas fa-trash-alt"></i>
                      </button>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>




     <!--  Modal Modulos-->
                    <div class="modal fade" id="modalData" tabindex="-1" role="dialog"aria-hidden="true" data-backdrop="static">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h6>Datos Modulo</h6>
                                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">×</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <form>
                                        <input type="hidden" value="0" id="txtId">
                                        <div class="row">
                                            <div class="col-sm-8">
                                                <div class="form-row">
                                                        <div class="form-group col-sm-6">
                                                            <label for="txtPrograma">Programa</label>
                                                            <input type="text" class="form-control form-control-sm input-validar" id="txtPrograma" name="txtPrograma">
                                                        </div>
                                                        <div class="form-group col-sm-6">
                                                            <label for="txtNombreModulo">Nombre Modulo</label>
                                                            <input type="text" class="form-control form-control-sm input-validar" id="txtNombreModulo" name="txtNombreModulo">
                                                        </div>
                                                </div>
                                                <div class="form-row">
                                                        <div class="form-group col-sm-12">
                                                            <label for="txtIdentificacionModulo">Identificación Modulo</label>
                                                            <input type="text" class="form-control form-control-sm input-validar" id="txtIdentificacionModulo" name="txtIdentificacionModulo">
                                                        </div>
                                                </div>
                                                <div class="form-row">
                                                    <div class="form-group col-sm-6">
                                                            <label for="txtCreditos">Creditos</label>
                                                            <input type="text" class="form-control form-control-sm input-validar" id="txtCreditos" name="txtCreditos">
                                                    </div>
                                                    <div class="form-group col-sm-6">
                                                            <label for="txtPrecio">Precio</label>
                                                            <input type="text" class="form-control form-control-sm input-validar" id="txtPrecio" name="txtPrecio">

                                                    </div>
                                                </div>

                
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button class="btn btn-primary btn-sm" type="button" id="btnGuardar">Guardar</button>
                                    <button class="btn btn-danger btn-sm" type="button" data-dismiss="modal">Cancel</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--Modal-->







