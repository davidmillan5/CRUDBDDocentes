      </div>
    </div>






    <!--  Modal Grupos-->
                    <div class="modal fade" id="modalData" tabindex="-1" role="dialog"aria-hidden="true" data-backdrop="static">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h6>Datos Grupos</h6>
                                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">×</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <form>
                                        <input type="hidden" value="0" id="txtId">
                                        <div class="row">
                                            <div class="col-sm-8">
                                                <div class="form-row">
                                                        <div class="form-group col-sm-6">
                                                            <label for="txtFechaInicio">Fecha de Inicio</label>
                                                            <input type="text" class="form-control form-control-sm input-validar" id="txtFechaInicio" name="txtFechaInicio">
                                                        </div>
                                                        <div class="form-group col-sm-6">
                                                            <label for="txtNroEstudiantes">Numero de Estudiantes</label>
                                                            <input type="text" class="form-control form-control-sm input-validar" id="txtNroEstudiantes" name="txtNroEstudiantes">
                                                        </div>
                                                </div>
                                                <div class="form-row">
                                                        <div class="form-group col-sm-12">
                                                            <label for="txtIdentificacionGrupo">Identificación Grupo</label>
                                                            <input type="text" class="form-control form-control-sm input-validar" id="txtIdentificacionGrupo" name="txtIdentificacionGrupo">
                                                        </div>
                                                </div>
                                                <div class="form-row">
                                                    <div class="form-group col-sm-4">
                                                            <label for="txtJornada">Jornada</label>
                                                            <input type="text" class="form-control form-control-sm input-validar" id="txtJornada" name="txtJornada">
                                                    </div>
                                                    <div class="form-group col-sm-4">
                                                            <label for="txtIdModulo1">Identificacion Modulo</label>
                                                            <input type="text" class="form-control form-control-sm input-validar" id="txtIdModulo1" name="txtIdModulo1">

                                                    </div>


                                                    <div class="form-group col-sm-4">
                                                            <label for="txtIdDocente1">Identificacion Docente</label>
                                                            <input type="text" class="form-control form-control-sm input-validar" id="txtIdDocente1" name="txtIdDocente1">

                                                    </div>



                                                </div>


                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button class="btn btn-primary btn-sm" type="button" id="btnGuardar">Guardar</button>
                                    <button class="btn btn-danger btn-sm" type="button" data-dismiss="modal">Cancel</button>
                                </div>
                            </div>
                        </div>
                    </div>
